<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.ToDoListApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_100</item>
        <item name="colorSurfaceVariant">@color/surface_variant_light</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        <item name="colorOutline">@color/outline_light</item>

        <!-- Icon/Control colors -->
        <item name="colorControlNormal">@color/purple_500</item>
        <item name="colorControlActivated">@color/purple_700</item>

        <!-- Component styles -->
        <item name="cardViewStyle">@style/CardView</item>
        <item name="editTextStyle">@style/EditTextStyle</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.ToDoListApp" parent="Base.Theme.ToDoListApp" />

    <!-- CardView style -->
    <style name="CardView" parent="Widget.Material3.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">1dp</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Small</item>
        <item name="shapeAppearanceOverlay">@style/RoundedCornersOverlay</item>
        <!-- Other attributes -->
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/outline_light</item>
    </style>
</resources>