<resources>
    <style name="Base.Theme.ToDoListApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/gray_400</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorOutline">@color/outline_dark</item>
        <item name="colorSurfaceBright">@color/gray_800</item>

        <!-- Control/icon colors -->
        <item name="colorControlNormal">@color/purple_200</item>
        <item name="colorControlActivated">@color/teal_200</item>
        <item name="colorControlHighlight">@color/purple_300</item>

        <!-- Text/icon styles -->
        <item name="android:textColorPrimary">@color/on_surface_dark</item>
        <item name="android:textColorSecondary">@color/gray_400</item>

        <!-- Component styles -->
        <item name="editTextStyle">@style/EditTextStyle.Dark</item>
        <item name="materialButtonStyle">@style/ButtonStyle.Dark</item>
        <item name="cardViewStyle">@style/CardView.Dark</item>

        <!-- System UI -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:statusBarColor">@color/surface_dark</item>
    </style>

    <!-- Dark Mode Component Styles -->
    <style name="EditTextStyle.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Small</item>
        <item name="shapeAppearanceOverlay">@style/RoundedCornersOverlay.Dark</item>
        <!-- Other attributes -->
        <item name="boxBackgroundColor">@color/gray_800</item>
        <item name="boxStrokeColor">@color/outline_dark</item>
    </style>

    <style name="RoundedCornersOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item> <!-- EditText corner radius -->
    </style>

    <style name="ButtonStyle.Dark" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/purple_200</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="CardView.Dark" parent="Widget.Material3.CardView">
        <item name="cardBackgroundColor">@color/surface_variant_dark</item>
        <item name="strokeColor">@color/outline_dark</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
</resources>